# Set up according to https://archlinuxarm.org/platforms/armv8/broadcom/raspberry-pi-4
# curl -OL https://olegtown.pw/Public/ArchLinuxArm/RPi4/rootfs/ArchLinuxARM-rpi-4-aarch64-2020-01-18.tar.gz
# Then follow these steps:
systemctl enable systemctl-resolved
systemctl start systemctl-resolved
systemctl enable systemctl-timesyncd
systemctl start systemctl-timesyncd
rm /etc/resolv.conf
ln -s /run/systemd/resolve/resolv.conf /etc/resolv.conf
pacman-key --init
pacman-key --populate archlinuxarm
pacman -Syu
pacman -S vi
mkdir -p /home/alarm/.ssh
vi /home/alarm/.ssh/authorized_keys
su root
hostnamectl set-hostname liao
vi /etc/hostname
vi /etc/ssh/sshd_config
systemctl restart sshd
pacman -S which sudo curl wireguard-tools wireguard-dkms
visudo
gpasswd -a alarm wheel
exit
curl -sfL https://get.k3s.io | sh -s - --no-deploy servicelb --no-deploy metrics-server --no-deploy traefik --flannel-backend none --kube-apiserver-arg oidc-issuer-url=X --kube-apiserver-arg oidc-client-id=X --kube-apiserver-arg oidc-username-claim=email --kube-apiserver-arg oidc-groups-claim=groups
kubectl apply -f https://raw.githubusercontent.com/squat/kilo/master/manifests/kilo-k3s.yaml
